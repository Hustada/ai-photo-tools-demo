# CompanyCam API Configuration
# Get your API key from CompanyCam dashboard
COMPANYCAM_API_KEY=your_companycam_api_key_here
VITE_APP_COMPANYCAM_API_KEY=your_companycam_api_key_here

# Demo Mode Configuration (Optional)
# Set this to enable the "Try Demo" button with a test API key
VITE_DEMO_API_KEY=your_test_api_key_here

# Anthropic Claude API
# Sign up at https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxx

# OpenAI API
# Get your key from https://platform.openai.com
OPENAI_API_KEY=sk-xxxxxxxxxxxxx

# Vercel KV Database
# Create a KV database in your Vercel dashboard
KV_REST_API_URL=https://xxxxx.kv.vercel-storage.com
KV_REST_API_TOKEN=xxxxxxxxxxxxx

# Pinecone Vector Database (Optional - for photo search features)
# Sign up at https://www.pinecone.io
PINECONE_API_KEY=xxxxxxxxxxxxx
PINECONE_INDEX_NAME=photo-search
PINECONE_ENVIRONMENT=us-east-1

# User Configuration
# Your CompanyCam user ID
VITE_APP_DEFAULT_USER_ID=your_user_id_here

# Ghost Blog Integration (Optional)
# For blog publishing features
GHOST_API_KEY=xxxxxxxxxxxxx
GHOST_API_URL=https://yourblog.ghost.io